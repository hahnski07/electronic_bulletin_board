<% provide(:title, @board.name) %>

<div class="row">
	<div class="span6 offset">
		<h1><%= @board.name %></h1>
		<div><%= @board.timezone %></div>
		<div><%= "Created by: #{@board.user.name}" %></div>
		<div><%= "Width: #{pluralize(@board.width, 'tile')}" %></div>
		<div><%= "Height: #{pluralize(@board.height, 'tile')}" %></div>
		<div><%= link_to "Create advertisement", new_board_advertisement_path(@board), query: @board.id, class: "btn btn-medium btn-primary" %></div>
		<div id="board" style="position: relative; margin-top: 10px; box-shadow: 0px 0px 3px #000000; width: <%= Integer(@board.width) * 64 %>px; height: <%= Integer(@board.height) * 64 %>px;">
			<% @board.advertisements.each do |advertisement| %>
			<div style="position: absolute; left: <%= advertisement.x_location * 64 %>px; top: <%= advertisement.y_location * 64 %>px; width: <%= advertisement.width * 64 %>px; height: <%= advertisement.height * 64 %>px; background: #3F647F url('/images/<%= advertisement.id %>');"></div>
			<% end %>
		</div>
	</div>
</div>